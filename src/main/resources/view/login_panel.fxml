<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="7.0" prefHeight="180.0" prefWidth="290.0" styleClass="background" vgap="7.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <TextField fx:id="fldLogin" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <font>
            <Font size="14.0" />
         </font></TextField>
      <PasswordField fx:id="fldPassword" onAction="#enterButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <font>
            <Font size="14.0" />
         </font></PasswordField>
      <FlowPane alignment="CENTER_RIGHT" GridPane.columnSpan="3" GridPane.rowIndex="3">
         <children>
            <Label fx:id="lblStatus" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" textAlignment="CENTER" textFill="#ed0000" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="7.0" top="5.0" />
               </FlowPane.margin>
            </Label>
            <Button fx:id="btnEnter" mnemonicParsing="false" onAction="#enterButtonAction" prefWidth="70.0" text="Log In">
               <FlowPane.margin>
                  <Insets />
               </FlowPane.margin>
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#exitButtonAction" prefWidth="70.0" text="Exit">
               <FlowPane.margin>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </FlowPane.margin>
               <font>
                  <Font size="14.0" />
               </font></Button>
         </children>
      </FlowPane>
      <Label text="Welcome! Please enter the system:" GridPane.columnSpan="2" GridPane.halignment="CENTER">
         <font>
            <Font size="14.0" />
         </font></Label>
      <Label text="Username:" GridPane.rowIndex="1">
         <font>
            <Font size="14.0" />
         </font></Label>
      <Label text="Password:" GridPane.rowIndex="2">
         <font>
            <Font size="14.0" />
         </font></Label>
   </children>
   <columnConstraints>
      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="90.0" minWidth="90.0" prefWidth="90.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
   </rowConstraints>
</GridPane>
